
<h2>Inscrire un élève</h2>

<%= form_for [:validation, @user] do |f| %>
    <%= f.text_field :nom, placeholder: "Nom" %>
    <%= f.text_field :prenom, placeholder: "Prénom" %>
    <%= f.email_field :email, placeholder: "Email" %>
    <br />
    <br />   
    <%= f.label :approved, "Validé ?"%>
    <br />
    <%= f.check_box :approved %>
    <br />
    <div class="field">
        <%= f.radio_button :type, "Etudiant", :checked => true, class: "hidden" %>
        <%= f.label :type, "Etudiant", class: "hidden" %>
    </div>
    <%= f.submit "Enregistrer"%>
<% end %>
<%= link_to "Retour", :back%>