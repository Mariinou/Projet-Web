
<h2>Inscrire l'élève</h2>

<%= form_for [:validation, @user] do |f| %>
    <%= f.text_field :nom, placeholder: "Nom" %>
    <%= f.text_field :prenom, placeholder: "Prénom" %>
    <%= f.email_field :email, placeholder: "Email" %>
    <br />
    <br />   
    <%= f.label :approved%>
    <br />
    <%= f.check_box :approved %>
    <br />
    <div class="field">
        <%= f.radio_button :type, "Etudiant" %>
        <%= f.label :type, "Etudiant" %>
        <br />
        <%= f.radio_button :type, "Enseignant" %>
        <%= f.label :type, "Enseignant" %>
        <br />
    </div>
    <%= f.submit "Enregistrer"%>
<% end %>
<%= link_to "Retour", :back%>